{
  "compilerOptions": {
    "jsx": "react-jsx",               // Use React 17+ JSX transform
    "target": "ES6",                    
    "lib": ["es2015", "dom"],           
    "module": "ES6",                     // Webpack needs ES6 modules
    "outDir": "./dist",                  // Output folder for Webpack
    "rootDir": "./code",                 // Ensure TS looks for files in the right place
    "strict": true,                     
    "esModuleInterop": true,            
    "moduleResolution": "node",         
    "skipLibCheck": true,               
    "noImplicitAny": true,              
    "removeComments": true              
  },
  "include": [
    "./code/**/*.ts"                    
  ]
}


