{
  "compilerOptions": {
    "jsx": "react-jsx",               // Use React 17+ JSX transform
    "target": "ES6",                  // Output modern JS
    "lib": ["es2015", "dom"],         // Include ES6 + browser APIs
    "module": "Node16",               // Must match moduleResolution Node16
    "moduleResolution": "Node16",     
    "rootDir": "./code",               // Your TS source files
    "outDir": "./dist",                // Compiled output folder
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "noImplicitAny": true,             
    "removeComments": true             
  },
  "include": [
    "./code/**/*.ts",
    "./code/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
